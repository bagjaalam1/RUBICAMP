<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Siswa</title>

    <style>
        .delete {
            background-color: red;
            color: white;
            padding: 5px 20px;
            text-align: center;
            text-decoration: none;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;

        }

        .edit {
            background-color: rgb(0, 255, 0);
            color: white;
            padding: 5px 20px;
            text-align: center;
            text-decoration: none;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }

        .add {
            background-color: rgb(3, 76, 136);
            color: white;
            padding: 5px 20px;
            text-align: center;
            text-decoration: none;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            border: none;
            margin-top: 50px;
            margin-bottom: 10px;
            margin-right: 10px;
            margin-left: 80px;
        }

        th,
        td {
            text-align: left;
            padding: 0px;
            line-height: 2.3;
            border-left: none;
            border-right: none;
        }

        td {
            border: none;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }
    </style>
</head>

<body>
    <table style="width: 100%" border="1" cellspacing="0" cellpadding="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>String</th>
                <th>Integer </th>
                <th>Float</th>
                <th>Date</th>
                <th>Boolean</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% rows.forEach((item, index)=> {%>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= item.string %>
                    </td>
                    <td>
                        <%= item.integer %>
                    </td>
                    <td>
                        <%= item.float %>
                    </td>
                    <td>
                        <%= item.date %>
                    </td>
                    <td>
                        <%= item.boolean %>
                    </td>
                    <td>
                        <a class="edit" href="/edit/<%= index%>">Edit</a>
                        <a class="delete" href="/delete/<%= index%>">Hapus</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <a class="add" href="/add">Tambah</a>
</body>

</html>